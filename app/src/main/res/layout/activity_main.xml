<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/color4"
    android:alpha="1">

    <ImageButton
        android:id="@+id/editRaven3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="84dp"
        android:background="@color/color4"
        app:layout_constraintLeft_toRightOf="@+id/currentName"
        app:layout_constraintTop_toTopOf="@+id/currentName"
        app:srcCompat="@drawable/edit_raven"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/currentName3"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="56dp"
        android:text="James"
        android:textAlignment="center"
        android:textColor="@color/color1"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/ravenDestination"
        app:layout_constraintTop_toBottomOf="@+id/ravenDestination"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/offsign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/off_img"
        />

    <Switch
        android:id="@+id/switchonoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:showText="false"
        android:splitTrack="true"
        android:thumbTint="@color/color3"
        android:trackTint="@color/valid"
        app:layout_constraintLeft_toRightOf="@+id/ravenImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/ravenImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ravenlogo"
        android:tint="@color/color1"
        app:srcCompat="@drawable/ravenlogo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/ravenDestination"
        android:layout_marginEnd="55dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp" />


    <!--<ImageButton-->
    <!--android:id="@+id/addContact"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginEnd="16dp"-->
    <!--android:background="@color/color4"-->
    <!--android:src="@drawable/ic_add_circle_black_24dp"-->
    <!--android:tint="@color/color3"-->
    <!--tools:layout_editor_absoluteY="432dp"-->
    <!--tools:layout_editor_absoluteX="244dp" />-->

    <TextView
        android:id="@+id/ravenDestination"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Raven Destination:"
        android:textColor="@color/color2"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="251dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/currentName"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="56dp"
        android:text="James"
        android:textAlignment="center"
        android:textColor="@color/color1"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/ravenDestination"
        app:layout_constraintTop_toBottomOf="@+id/ravenDestination"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/myLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myLongitude"
        android:textSize="11dp"
        android:textColor="@color/color1"
        android:layout_marginStart="16dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@+id/editRaven2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:background="@color/color4"
        app:layout_constraintLeft_toRightOf="@+id/currentName"
        app:layout_constraintTop_toTopOf="@+id/currentName"
        app:srcCompat="@drawable/edit_raven"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/currentName2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="52dp"
        android:text="James "
        android:textAlignment="center"
        android:textColor="@color/color1"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/ravenDestination"
        app:layout_constraintTop_toBottomOf="@+id/ravenDestination"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/myLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myLatitude"
        android:textColor="@color/color1"
        android:textSize="11dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/myLongitude"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addContactfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/color3"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add_fab_24dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="16dp"
        />

    <ImageView
        android:id="@+id/sleepyBird"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/switchonoff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myLongitude"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/editRaven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/edit_raven"
        tools:layout_constraintTop_creator="1"
        android:background="@color/color4"
        android:layout_marginStart="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/currentName"
        app:layout_constraintLeft_toRightOf="@+id/currentName"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/currentAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentAddress"
        android:textColor="@color/color1"
        android:textSize="11dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/myLatitude"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/myLatitude" />


</android.support.constraint.ConstraintLayout>